<Window x:Class="OwnerGUI.OrderDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwnerGUI"
        mc:Ignorable="d"
        Title="OrderDetails" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Height="20" Grid.Row="0" FontSize="18" Margin="15,0,15,15" VerticalAlignment="Bottom">Order's content</TextBlock>
        <ListBox Name="detailsListBox" Margin="50,0,50,0" Grid.Row="1"></ListBox>
        <Button Name="OKButton" Grid.Row="3" HorizontalAlignment="Center" Margin="15,0,15, 0" FontSize="18" Height="30" Width="300" Click="OKButton_Click">OK</Button>
    </Grid>
</Window>
